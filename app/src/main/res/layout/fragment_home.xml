<?xml version="1.0" encoding="utf-8"?>
<com.jobinlawrance.pics.ui.custom.WindowInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/windowInsetFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:elevation="1dp"
        android:scrollbars="vertical"
        android:visibility="gone"
        tools:visibility="visible" />

    <Toolbar
        android:id="@+id/toolbar"
        style="@style/Widget.Pics.HomeToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:elevation="1dp"
        android:title="@string/app_name" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:indeterminateTint="?android:colorAccent"
        android:visibility="gone"
        tools:visibility="visible" />

    <ViewStub
        android:id="@+id/timeoutViewStub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/timeout" />

    <ViewStub
        android:id="@+id/networkErrorStub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout="@layout/network_error" />
</com.jobinlawrance.pics.ui.custom.WindowInsetsFrameLayout>